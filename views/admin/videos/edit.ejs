<body class="disable_transitions sidebar_main_open sidebar_main_swipe">
    <!-- main sidebar -->

<div id="page_content">
    <div id="page_content_inner">
        <div class="md-card">
                <div class="md-card-content large-padding">
                    <form id="form_validation" class="uk-form-stacked" enctype="multipart/form-data" action="/admin/videos/edit/<%= video.id %>" method="POST">
                      <%- partial('../partials/flash.ejs') %>
                        <div class="uk-grid" data-uk-grid-margin>
                            <div class="uk-width-medium-1-2">
                                <div class="parsley-row">
                                    <label for="title">عنوان<span class="req">*</span></label>
                                    <input type="text" name="title" required class="md-input" value="<%= video.title %>"/>
                                </div>
                            </div>
                        </div>
                        <div class="uk-grid" data-uk-grid-margin>
                            <div class="uk-width-medium-1-2">
                                <div class="parsley-row">
                                    <label for="slug">slug<span class="req">*</span></label>
                                    <input type="text" name="slug" required class="md-input" value="<%= video.slug %>"/>
                                </div>
                            </div>
                        </div>
                        <div class="uk-grid" data-uk-grid-margin>
                            <div class="uk-width-medium-1-2">
                                <div class="parsley-row">
                                    <label for="description">لینک<span class="req">*</span></label>
                                    <input type="text" name="link" required class="md-input" value="<%= video.link%>"/>
                                </div>
                            </div>
                        </div>
                        <div class="uk-grid" data-uk-grid-margin>
                            <div class="uk-width-medium-1-2">
                                <div class="parsley-row uk-margin-top">
                                <label for="content">محتوای اصلی پست<span class="req">*</span></label>
                                  <textarea name="content" id="content" rows="10" cols="80">
                                      <%= video.content%>
                                  </textarea>
                                  <script>
                                      // Replace the <textarea id="editor1"> with a CKEditor
                                      // instance, using default configuration.
                                      CKEDITOR.replace( 'content' );
                                  </script>
                                </div>
                            </div>
                        </div>

                        <div class="uk-grid" data-uk-grid-margin>
                            <div class="uk-width-medium-1-2">
                                <div class="parsley-row">
                                    <label for="tags">تگ ها را بنویسید و با , از هم جدا کنید<span class="req">*</span></label>
                                    <input type="text" name="tags" required class="md-input" value="<%= video.tags %>"/>
                                </div>
                            </div>
                        </div>
                        <div class="uk-grid" data-uk-grid-margin>
                            <div class="uk-width-medium-1-2">
                                <div class="parsley-row uk-margin-top">
                                    <h3 class="heading_a uk-margin-small-bottom">
                                        thumbnail<span class="req">*</span>
                                    </h3>
                                    <input type="file" name="thumbnail" id="input-file-a" class="dropify" />
                                    <img height="250" width="250" src="/videos/thumbnails/<%= video.id %>" alt="">
                                </div>
                            </div>
                        </div>


                        <div class="uk-grid" data-uk-grid-margin>
                            <div class="uk-width-medium-1-2">
                                <div class="parsley-row">
                                    <span class="icheck-inline">
                                        <input type="checkbox" name="published" <% if(video.published) {%> checked <% } %>/>
                                        <label for="isPublished" class="inline-label">منتشر شود<span class="req">*</span></label>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="uk-grid">
                            <div class="uk-width-1-1">
                                <button type="submit" class="md-btn md-btn-primary">زخیره</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
          </div>
    </div>
</div>

    <!-- google web fonts -->

    <!-- common functions -->
    <script src="/admin/js/common.min.js"></script>
    <!-- uikit functions -->
    <script src="/admin/js/uikit_custom.min.js"></script>
    <!-- altair common functions/helpers -->
    <script src="/admin/js/altair_admin_common.min.js"></script>

    <!--  form file input functions -->
    <script src="/admin/js/pages/forms_file_input.min.js"></script>

    <!--  dropify -->
    <script src="/admin/js/dropify/dist/js/dropify.min.js"></script>

    <script>
        $(function() {
            if(isHighDensity()) {
                $.getScript( "/admin/js/custom/dense.min.js", function(data) {
                    // enable hires images
                    altair_helpers.retina_images();
                });
            }
            if(Modernizr.touch) {
                // fastClick (touch devices)
                FastClick.attach(document.body);
            }
        });
        $window.load(function() {
            // ie fixes
            altair_helpers.ie_fix();
        });
    </script>


    <script>


        // toggle mini sidebar

            // change input's state to checked if mini sidebar is active
            if((localStorage.getItem("altair_sidebar_mini") !== null && localStorage.getItem("altair_sidebar_mini") == '1') || $body.hasClass('sidebar_mini')) {
                $mini_sidebar_toggle.iCheck('check');
            }

            $mini_sidebar_toggle
                .on('ifChecked', function(event){
                    $switcher.removeClass('switcher_active');
                    localStorage.setItem("altair_sidebar_mini", '1');
                    localStorage.removeItem('altair_sidebar_slim');
                    location.reload(true);
                })
                .on('ifUnchecked', function(event){
                    $switcher.removeClass('switcher_active');
                    localStorage.removeItem('altair_sidebar_mini');
                    location.reload(true);
                });

        // toggle slim sidebar

            // change input's state to checked if mini sidebar is active
            if((localStorage.getItem("altair_sidebar_slim") !== null && localStorage.getItem("altair_sidebar_slim") == '1') || $body.hasClass('sidebar_slim')) {
                $slim_sidebar_toggle.iCheck('check');
            }

            $slim_sidebar_toggle
                .on('ifChecked', function(event){
                    $switcher.removeClass('switcher_active');
                    localStorage.setItem("altair_sidebar_slim", '1');
                    localStorage.removeItem('altair_sidebar_mini');
                    location.reload(true);
                })
                .on('ifUnchecked', function(event){
                    $switcher.removeClass('switcher_active');
                    localStorage.removeItem('altair_sidebar_slim');
                    location.reload(true);
                });

        // toggle boxed layout

            if((localStorage.getItem("altair_layout") !== null && localStorage.getItem("altair_layout") == 'boxed') || $body.hasClass('boxed_layout')) {
                $boxed_layout_toggle.iCheck('check');
                $body.addClass('boxed_layout');
                $(window).resize();
            }

            $boxed_layout_toggle
                .on('ifChecked', function(event){
                    $switcher.removeClass('switcher_active');
                    localStorage.setItem("altair_layout", 'boxed');
                    location.reload(true);
                })
                .on('ifUnchecked', function(event){
                    $switcher.removeClass('switcher_active');
                    localStorage.removeItem('altair_layout');
                    location.reload(true);
                });

        // main menu accordion mode
            if($sidebar_main.hasClass('accordion_mode')) {
                $accordion_mode_toggle.iCheck('check');
            }

            $accordion_mode_toggle
                .on('ifChecked', function(){
                    $sidebar_main.addClass('accordion_mode');
                })
                .on('ifUnchecked', function(){
                    $sidebar_main.removeClass('accordion_mode');
                });


        });
    </script>
</body>

